---
import { ViewTransitions } from 'astro:transitions';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" id="main-app">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/1F338.svg" />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@200;300;400;500;600;700;800&display=swap" rel="stylesheet">
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<ViewTransitions />
	</head>
	<body class="bg-bkg transition-color ease-in-out duration-200">
		<slot />
	</body>
</html>

<style>

	body {
		padding: 30px;
		opacity: 1;
		background-image:  linear-gradient(90deg,hsla(0,0%,90%,.4) 1px,transparent 0),linear-gradient(180deg,hsla(0,0%,90%,.4) 1px,transparent 0);
		background-size: 90px 90px; 
		margin: auto;
		max-width: 90%;
	}

	@media (min-width: 1280px) {
		body {
			padding: 64px 0px;
			
			max-width: 75%;
		}
	}

	@media (min-width: 1536px) {
		body {
			padding: 64px 0px;
			max-width: 55%;
		}
	}

</style>

<style is:global>

	@tailwind base;
	@tailwind components;
	@tailwind utilities;

	@layer base {
		:root {
			--color-bkg: 255 255 254;
			--color-aboutmecolor: 35 41 70;
			--color-curriculumcolor: 179 187 228;
			--color-changecolor: 35 41 70;
			--color-tecnocolor: 236 164 188;
			--color-discordcolor: 179 187 228;
			--color-hourcolor: 35 41 70;
			--color-contact: 236 164 188;
			--color-buttoncontact: 35 41 70;
		}

		:root[data-theme="dark"]{
			--color-bkg: 63 55 98;
			--color-aboutmecolor: 53 45 83;
			--color-curriculumcolor: 236 164 188;
			--color-changecolor: 53 45 83;
			--color-tecnocolor: 179 187 228;
			--color-discordcolor: 236 164 188;
			--color-hourcolor: 53 45 83;
			--color-contact: 179 187 228;
			--color-buttoncontact: 53 45 83;
		}
	}

	
	#app {
		display: grid;
		grid-template-areas: 
			"about about about"
			"cv cv theme"
			"tecno tecno tecno"
			"project project project"
			"hour discord discord"
			"email email email"
			;

		grid-template-columns: repeat(3, 1fr);
		grid-template-rows: repeat(4,auto) minmax(170px, auto) auto;
		gap: 17px;
	}

	#project {
			display: grid;
			grid-template-columns: repeat(4, auto);
			grid-template-rows: auto 86px repeat(4, auto);
			grid-template-areas: 
				"about about about about"
				"theme theme theme link"
				"p1 p1 p1 p1"
				"p2 p2 p2 p2"
				"p3 p3 p3 p3"
				"small small small small"
			;

			gap: 17px;
		}

	@media (min-width: 1024px) and (orientation: landscape) {
		#app {
			grid-template-columns: repeat(4, 1fr);
			grid-template-rows: auto auto 86px 1fr auto;
			grid-template-areas: 
				"about about about picture"
				"cv tecno tecno tecno"
				"theme tecno tecno tecno"
				"project project discord hour"
				"email email email email"
			;
		}

		#project {
			grid-template-columns: repeat(4, 1fr);
			grid-template-rows: 86px auto repeat(3, 1fr) 1fr;
			grid-template-areas: 
				"about about about theme"
				"about about about link"
				"p1 p1 p1 p1"
				"p2 p2 p2 p2"
				"p3 p3 p3 p3"
				"small small small small"
			;

			gap: 17px;
		}
	}
	
	html {
		font-family: 'Inter', sans-serif;
		box-sizing: border-box;
		scroll-behavior: smooth;
	}
	

</style>

