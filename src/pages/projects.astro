---
import Layout from '../layouts/Layout.astro';
import About from '../components/About.astro';
import Toggle from '../components/Toggle.astro';

import BigProject from '../components/projects-page/bigProject.astro';
import SmallProject from '../components/projects-page/smallProject.astro';
import Links from '../components/projects-page/Links.astro';
import Image from '../components/projects-page/Image.astro';
import BlackButton from '../components/projects-page/BlackButton.astro';

import proyect1 from '../images/proyectos/proyecto1.webp';

import Astrosvg from '../icons/Astrosvg.astro';
import Reactsvg from '../icons/Reactsvg.astro';
import Tailwindsvg from '../icons/Tailwindsvg.astro';
import TagSmall from '../components/projects-page/TagSmallProject.astro';
import TagBig from '../components/projects-page/TagsBigProjects.astro';

---

<Layout title="valne | Projects - Estudiante de Ing.Informática con interés en el Desarrollo Web">
    <main id="project">
        <About>
			<h1 class="text-3xl text-white font-semibold">Proyectos</h1>
            <p class="text-white text-md mt-4">Me enfoco en fusionar la creatividad y la tecnología para ofrecer soluciones bonitas. 🩷</p>
            <Links/>
		</About>
        <Toggle/>

        <a href="/" class="[grid-area:link] will-change-transform bg-secondarycolor rounded-3xl p-8 shadow-lg flex flex-wrap justify-center content-center cursor-pointer transition-transform ease-in-out delay-100 hover:scale-95 duration-500">
            <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-arrow-back-up inline stroke-bkg" width="25" height="25" viewBox="0 0 24 24" stroke-width="1.5" fill="none" stroke-linecap="round" stroke-linejoin="round">
                <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                <path d="M9 14l-4 -4l4 -4" />
                <path d="M5 10h11a4 4 0 1 1 0 8h-1" />
            </svg>
			<span class="text-bkg ml-2">Regresar</span>
		</a>  

         <!-- Proyecto 1 -->
        <section class="[grid-area:p1] bg-ternarycolor text-bkg rounded-3xl shadow-lg p-8">
            <BigProject
                name="World Ranks - Country Page",
                desc="La página utiliza la API de Countries para listar información sobre las diversas naciones del mundo, ofreciendo la posibilidad de filtrar estos países mediante diversas opciones. Junto a esto, gracias a Astro, se implementaron rutas dinámicas para ver información más detallada sobre cada uno de los países. 🌍"
            > 

                <Image slot="image" link="https://world-rank-valnhe.netlify.app" image={proyect1.src}> 
                    <li class="mr-2">
                        <Reactsvg/>
                    </li>
                    <li class="mr-2">
                        <Tailwindsvg/>
                    </li>
                    <li class="mr-2">
                        <Astrosvg/>
                    </li>
                </Image>

                <BlackButton slot="buttons" demo={"https://world-rank-valnhe.netlify.app"} code="https://github.com/valnhe/World-Ranks"/>
            
                <ul class="flex justify-end gap-2">
                    <TagBig label="astro"/>
                    <TagBig label="react"/>
                    <TagBig label="tailwind"/>
                </ul>

            </BigProject>
        </section>

        <!-- Proyecto 2 -->
        <section class="[grid-area:p2] bg-secondarycolor text-bkg rounded-3xl shadow-lg p-8">
            <BigProject
                name="Test",
                desc="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed do eiusmod tempor incididunt ut labore et dolore magna aliqua."
            > 

                <Image slot="image" link="https://world-rank-valnhe.netlify.app" image={proyect1.src}> 
                    <li class="mr-2">
                        <Reactsvg/>
                    </li>
                    <li class="mr-2">
                        <Tailwindsvg/>
                    </li>
                    <li class="mr-2">
                        <Astrosvg/>
                    </li>
                </Image>

                <BlackButton slot="buttons" demo={"https://world-rank-valnhe.netlify.app"} code="https://github.com/valnhe/World-Ranks"/>
            
                <ul class="flex justify-end gap-2">
                    <TagBig label="astro"/>
                    <TagBig label="react"/>
                    <TagBig label="tailwind"/>
                </ul>

            </BigProject>
        </section>

        <!-- Proyectos Pequeños -->
        <section class="[grid-area:small] grid grid-cols-projectos gap-3 md:block self-center rounded-3xl p-8 bg-primarycolor h-full">
            <!-- Proyecto 1 -->
            <SmallProject
                name="Translate App",
                git="https://translate-app-valnhe.netlify.app",
                desc="La página utiliza la API de My Memory para traducir el texto ingresado al idioma seleccionado. ¡También permite copiar y escuchar el texto ingresado y traducido! 🌎"
                >

                <ul class="flex justify-end gap-2">
                    <TagSmall label="react"/>
                    <TagSmall label="tailwind"/>
                    <TagSmall label="vitejs"/>
                </ul>
                
            </SmallProject>

            <!-- Proyecto 2 -->
            <SmallProject
                name="GitHub Profile Visualizer",
                git="https://github-profile-valnhe.netlify.app",
                desc="La página utiliza la API de GitHub para visualizar el perfil del usuario buscado, mostrando información detallada como el número de seguidores, la cantidad de personas a las que sigue y su ubicación. Además, también muestra información sobre los distintos repositorios del usuario en cuestión. 🖥️"
                >
            
                <ul class="flex justify-end gap-2">
                    <TagSmall label="react"/>
                    <TagSmall label="tailwind"/>
                    <TagSmall label="vitejs"/>
                </ul>

            </SmallProject>

            <!-- Proyecto 3 -->
            <SmallProject
                name="Simple Coffee Listing",
                git="https://simple-coffee-listing-valnhe.netlify.app",
                desc="Simplemente lista los cafés que se encuentran en un archivo JSON mediante el uso de un componente de tarjeta (card), ofreciendo la posibilidad de filtrar los cafés según su disponibilidad. ☕"
                >
                
                <ul class="flex justify-end gap-2">
                    <TagSmall label="react"/>
                    <TagSmall label="vitejs"/>
                </ul>

            </SmallProject>
            
        </section>
        
    </main>
</Layout>




