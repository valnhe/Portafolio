---
const { link , img , img2 = img, alt } = Astro.props;
img2 ? img2 : img;
const project = link === "/projects" ? true : false;
const linkedin = link === "https://www.linkedin.com/in/valentina-castillo-valdes/" ? true : false;
---

<a href={link} target={project ? "_self" : "_blank"}  class=`${Astro.props.class} shadow-lg rounded-3xl relative group will-change-transform overflow-hidden`>
 
    {
        project && (
        <div class="absolute z-10 bottom-0 top-0 w-full h-full bg-gradient-to-b from-transparent from-40% via-[#232946]/50 to-[#232946]/80"></div>
        )
    }

    <img src={img} alt={alt} class=`${Astro.props.classImage} object-center w-full h-full z-0 scale-100 absolute opacity-0 dark:opacity-100 transition-transform group-hover:scale-110 duration-1000`>
    <img src={img2} alt={alt} class=`${Astro.props.classImage} object-center w-full h-full z-0 scale-100 absolute opacity-100 dark:opacity-0 transition-transform ease-in-out group-hover:scale-110 duration-1000`>

    <div class:list={[
        "z-20 relative p-4",

        { "text-white" : !linkedin },
        { "text-bkg" : linkedin }

    ]}>
        <svg stroke="currentColor" fill="none" stroke-width="2" viewBox="0 0 24 24" stroke-linecap="round" stroke-linejoin="round" class="text-xl opacity-90 absolute top-4 right-4 scale-0 group-hover:scale-90 transition-all ease-in-out duration-500" height="1em" width="1em" xmlns="http://www.w3.org/2000/svg"><line x1="7" y1="17" x2="17" y2="7"></line><polyline points="7 7 17 7 17 17"></polyline></svg>
        <slot/>
    </>
</a>